# Production Environment Configuration
# Copy this file to .env.prod and update with your production values

# Application Configuration
DEBUG=false
ENVIRONMENT=production
SECRET_KEY=your-super-secret-production-key-here
HOST=0.0.0.0
PORT=8080
WORKERS=1

# CORS Configuration
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
ALLOWED_HEADERS=*

# Database Configuration
POSTGRES_PASSWORD=your-secure-postgres-password
DATABASE_URL=postgresql://postgres:your-secure-postgres-password@postgres:5432/ai_content_publisher
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=0

# Celery Configuration
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/2

# Webflow Configuration
WEBFLOW_API_KEY=your-webflow-api-key
WEBFLOW_SITE_ID=your-webflow-site-id
WEBFLOW_COLLECTION_ID=your-webflow-collection-id

# WordPress Configuration
WORDPRESS_SITE_URL=https://yoursite.com
WORDPRESS_USERNAME=your-username
WORDPRESS_PASSWORD=your-password
WORDPRESS_APP_PASSWORD=your-app-password

# LinkedIn Configuration
LINKEDIN_ACCESS_TOKEN=your-linkedin-access-token
LINKEDIN_USER_ID=your-linkedin-user-id

# Twitter Configuration
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret
TWITTER_ACCESS_TOKEN=your-twitter-access-token
TWITTER_ACCESS_TOKEN_SECRET=your-twitter-access-token-secret

# Rate Limiting
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=3600

# Content Processing
MAX_CONTENT_LENGTH=100000
MAX_IMAGES_PER_CONTENT=20
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/gif,image/webp

# Publishing Configuration
DEFAULT_TIMEOUT=30
MAX_RETRIES=3
RETRY_DELAY=1

# Batch Processing
MAX_BATCH_SIZE=100
BATCH_CONCURRENCY=3

# Monitoring & Logging
LOG_LEVEL=INFO
ENABLE_METRICS=true
ENABLE_TRACING=true

# Google Cloud Configuration
GOOGLE_CLOUD_PROJECT=your-project-id
GOOGLE_CLOUD_REGION=us-central1

# Health Check
HEALTH_CHECK_INTERVAL=30
